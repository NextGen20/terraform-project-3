pipeline {
    agent any
    
    stages {
        stage('Destroy EC2 Instances') {
            agent {
                label 'Aws-ec2-instances'
            }
                   steps {   
                dir('//home/ubuntu/workspace/Terraform-Project3') {
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
            }
        }
        
        stage('Destroy S3 Bucket') {
            agent {
                label 'Aws-s3-Bucket'
            }
              steps {   
                dir('//home/ubuntu/workspace/Terraform-Project3') {
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
            }
        }
        }
        
        /
        stage('Destroy IAM User') {
            agent {
                label 'Aws-iam'
            }
               steps {   
                dir('//home/ubuntu/workspace/Terraform-Project3') {
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
            }
        }
        }
        
        stage('Destroy DynamoDB Table') {
            agent {
                label 'Aws-dynamodb'
            }
              steps {   
                dir('//home/ubuntu/workspace/Terraform-Project3') {
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
            }
        }
        }
        
        stage('Destroy Github') {
            agent {
                label 'Aws-github'
            }
              steps {   
                dir('//home/ubuntu/workspace/Terraform-Project3') {
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
            }
        }
        }
    }
}
}